@model DatPhongImageViewModel

<h2>Upload Image</h2>

@using (Html.BeginForm("UploadImage", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="MaDp">MaDp:</label>
        <input type="text" name="MaDp" id="MaDp" class="form-control" />
    </div>
    <div class="form-group">
        <label for="FormFile">Image:</label>
        <input type="file" name="HinhAnh" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
}

@if (ViewData.ModelState.IsValid)
{
    <div class="alert alert-success">
        Hình ảnh đã được tải lên thành công.
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        Có lỗi xảy ra khi tải lên hình ảnh.
    </div>
}